<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/recycler_item_vertical_padding"
        android:paddingEnd="@dimen/recycler_item_horizontal_padding"
        android:paddingStart="@dimen/recycler_item_horizontal_padding"
        android:paddingTop="@dimen/recycler_item_vertical_padding" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@drawable/shadow_toolbar" />

</LinearLayout>